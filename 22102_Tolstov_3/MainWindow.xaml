<Window x:Class="_22102_Tolstov_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_22102_Tolstov_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="195*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Толстов | Вариант 3" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
        <TextBlock Grid.Row="1" Text="Введите размер массива :" Margin="120,14,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="24"/>
        <TextBox x:Name="tboxArray" Grid.Row="1" Height="32" VerticalAlignment="Top" Margin="414,14,276,0" FontSize="24" RenderTransformOrigin="0.218,0.501" TextChanged="tboxArraySize_TextChanged"/>
        <TextBlock Grid.Row="1" Text="Введите диапазон:" FontSize="24" Margin="195,71,396,263"/>
        <TextBox x:Name="tboxStart" Grid.Row="1" Height="32" VerticalAlignment="Top" Margin="414,71,331,0" FontSize="24" TextChanged="tboxStart_TextChanged"/>
        <TextBox x:Name="tboxEnd" Grid.Row="1" Height="32" VerticalAlignment="Top" Margin="474,71,276,0" FontSize="24" TextChanged="tboxEnd_TextChanged"/>
        <Button x:Name="btnGenerate" Content="Отсортировать" HorizontalAlignment="Center" Margin="0,127,0,0" Grid.Row="1" VerticalAlignment="Top" Height="39" Width="202" Click="btnGenerate_Click"/>
        <Label x:Name="lblResult" FontSize="14" Content="" HorizontalAlignment="Left" Margin="286,216,0,0" Grid.Row="1" VerticalAlignment="Top" Width="222" Height="59"/>
    </Grid>
</Window>
